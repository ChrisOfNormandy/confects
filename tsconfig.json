{
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": false,
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": ".",
        "skipLibCheck": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "paths": {
            "@buttons": [
                "lib/buttons"
            ],
            "@containers": [
                "lib/containers"
            ],
            "@decorations": [
                "lib/decorations"
            ],
            "@dialogs": [
                "lib/dialogs"
            ],
            "@editors": [
                "lib/editors"
            ],
            "#helpers": [
                "lib/helpers"
            ],
            "@inputs": [
                "lib/inputs"
            ],
            "@managed": [
                "lib/managed"
            ],
            "@markdown": [
                "lib/markdown"
            ],
            "@menu": [
                "lib/menu"
            ],
            "@overlay": [
                "lib/overlay"
            ],
            "@router": [
                "lib/router"
            ],
            "@selectors": [
                "lib/selectors"
            ],
            "@table": [
                "lib/table"
            ],
            "#types": [
                "lib/types"
            ]
        },
        // Bundler stuff
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        // Linting
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "strict": true,
    },
    "include": [
        "lib",
        "src"
    ],
    "exclude": [
        "./**/*.mjs",
        "./dist/**/*"
    ]
}